<h1><%= @kitten.name %></h1>

<p>
  <strong>Age:</strong>
  <%= @kitten.age %>
</p>

<p>
  <strong>Cuteness:</strong>
  <%= @kitten.cuteness %>
</p>

<p>
  <strong>Softness:</strong>
  <%= @kitten.softness %>
</p>

<hr>

<p>
  <%= link_to "Edit", edit_kitten_path(@kitten) %> |
  <%= link_to "Back to All Kittens", kittens_path %> |
  <%= link_to "Delete", kitten_path(@kitten),
        method: :delete,
        data: { confirm: "Are you sure you want to delete #{@kitten.name}?" } %>
</p>
